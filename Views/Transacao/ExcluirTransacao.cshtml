<h3>Deseja excluir a transação selecionada?</h3>

<p><strong>Data:</strong> @ViewBag.Registro.Data.ToString();</p>
<p><strong>Histórico:</strong> @ViewBag.Registro.Descricao.ToString();</p>
<p><strong>Valor:</strong> @ViewBag.Registro.Valor.ToString();</p>

<button type="button" onclick="Excluir(@ViewBag.Registro.Id.ToString())" class="btn btn-lg btn-danger">Excluir</button>
<button type="button" onclick="Cancelar()" class="btn btn-lg btn-default">Cancelar</button>

<script>
    function Excluir(id)
    {
        window.location.href = "../../Transacao/Excluir/" + id;
    }

    function Cancelar()
    {
        window.location.href = "../../Transacao/Index";
    }
</script>

